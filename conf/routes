# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                                       @core.controllers.CoreApplication.index

# Management
GET           /manage                                 @core.controllers.CoreApplication.userManagement

# Login page
GET           /login                                  @core.controllers.CustomLoginPage.login
GET           /logout                                 @core.controllers.CustomLoginPage.logout

# Registration routes
GET           /invite                                 @core.controllers.CustomRegistration.startSignUp
GET           /signup/:mailToken                      @core.controllers.CustomRegistration.signUp(mailToken)
POST          /invite                                 @core.controllers.CustomRegistration.handleStartSignUp
POST          /signup/:mailToken                      @core.controllers.CustomRegistration.handleSignUp(mailToken)

# Reset password
GET           /reset                                  @core.controllers.PasswordReset.startResetPassword
POST          /reset                                  @core.controllers.PasswordReset.handleStartResetPassword
GET           /reset/:mailToken                       @core.controllers.PasswordReset.resetPassword(mailToken)
POST          /reset/:mailToken                       @core.controllers.PasswordReset.handleResetPassword(mailToken)

# Change Password
GET           /password                               @core.controllers.PasswordChange.page
POST          /password                               @core.controllers.PasswordChange.handlePasswordChange

# Permissions
GET           /permission                             @core.controllers.PermissionsController.getPermissions
GET           /permission/writeable                   @core.controllers.PermissionsController.getWriteablePermissions
GET           /permission/readonly                    @core.controllers.PermissionsController.getReadOnlyPermissions
POST          /permission                             @core.controllers.PermissionsController.addPermission
POST          /permission/rename/:permissionId        @core.controllers.PermissionsController.renamePermission(permissionId: String)
DELETE        /permission/:permissionId               @core.controllers.PermissionsController.deletePermission(permissionId: String)

POST          /user/permissions/:userId               @core.controllers.PermissionsController.addUserPermission(userId: String)
DELETE        /user/permissions/:userId               @core.controllers.PermissionsController.deleteUserPermission(userId: String)

POST          /account/permissions/:accountId         @core.controllers.PermissionsController.addAccountPermission(accountId: String)
DELETE        /account/permissions/:accountId         @core.controllers.PermissionsController.deleteAccountPermission(accountId: String)

#Accounts
GET           /account                                @core.controllers.AccountController.getAccounts
GET           /account/users/:accountId               @core.controllers.AccountController.getAccountUsers(accountId: String)
GET           /account/:accountId                     @core.controllers.AccountController.getAccount(accountId: String)
GET           /availableaccount                       @core.controllers.AccountController.getAvailableAccounts
GET           /lastselectedaccount                    @core.controllers.AccountController.getLastSelectedAccount
POST          /account                                @core.controllers.AccountController.addAccount
POST          /account/rename/:accountId              @core.controllers.AccountController.renameAccount(accountId: String)
POST          /account/users/:accountId               @core.controllers.AccountController.addAccountUsers(accountId: String)
POST          /lastselectedaccount/:accountId         @core.controllers.AccountController.setLastSelectedAccount(accountId: String)
DELETE        /account/users/:accountId               @core.controllers.AccountController.deleteAccountUsers(accountId: String)
DELETE        /account/:accountId                     @core.controllers.AccountController.deleteAccount(accountId: String)

#Users
GET           /user                                   @core.controllers.UserController.getUsers
GET           /user/invited                           @core.controllers.UserController.getInvitedUsers
DELETE        /user/invited/:inviteId                 @core.controllers.UserController.deleteInvite(inviteId: String)
DELETE        /user/:userId                           @core.controllers.UserController.deleteUser(userId: String)

# Authentication entry points for all providers
POST          /authenticate                           @core.controllers.CustomProviderController.authenticateByPost(provider = "userpass", redirectTo: Option[String])

#Reporting
->            /reporting                              reporting.Routes

#Billing
->            /billing                                billing.Routes

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                           controllers.Assets.at(path="/public/core", file)
GET           /webjars/*file                          controllers.WebJarAssets.at(file)
GET           /assets/*file                           securesocial.controllers.Assets.at(path = "/public/securesocial", file)

